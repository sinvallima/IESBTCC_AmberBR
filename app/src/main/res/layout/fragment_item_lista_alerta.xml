<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.iesb.tcc.amberbr.activity.fragments.ItemListaAlertaFragment">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="7">

        <ImageView
            android:layout_width="94dp"
            android:layout_height="104dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="5"
            app:srcCompat="@drawable/ike_foto"
            android:id="@+id/imageViewFoto"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center_horizontal"
            android:layout_column="0"
            android:layout_row="5"
            android:text="JONAS"
            android:id="@+id/textNome"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="center_horizontal"
            android:layout_column="0"
            android:layout_row="6"
            android:text="9 anos"
            android:id="@+id/textIdade"
            android:layout_marginBottom="5dp"
            android:textSize="12sp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:text="ALERTA LOCAL"
            android:id="@+id/textTipoAlerta"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnSpan="3"
            android:text="PERDIDO"
            android:paddingTop="3dp"
            android:id="@+id/textTipoDesaparecimento"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnSpan="3"
            android:text="Há 45 minutos"
            android:paddingTop="3dp"
            android:id="@+id/textTempoDecorrido"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_columnSpan="3"
            android:text="Num raio de 800m"
            android:paddingTop="3dp"
            android:id="@+id/textDistancia"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_columnSpan="3"
            android:text="Último Avistamento: SUPERMERCADO"
            android:paddingTop="3dp"
            android:id="@+id/textUltimoAvistamento"
            android:maxLines="2"
            android:layout_rowSpan="2"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_column="2"
            android:layout_row="0"
            android:text=""
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:id="@+id/textBlankSpace"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_column="3"
            android:layout_row="0"
            android:text="25 Jan 2017"
            android:id="@+id/textDataAlerta"
            android:textAlignment="gravity"
            android:gravity="left|right" />
    </GridLayout>


</FrameLayout>
